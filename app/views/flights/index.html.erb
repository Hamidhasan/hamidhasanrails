<h1>Listing flights</h1>

<table>
  <tr>
    <th>Departure</th>
    <th>Departure time</th>
    <th>Arrival</th>
    <th>Arrival time</th>
    <th>Is International?</th>
    <th>Passenger</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @flights.each do |flight| %>
  <tr>
    <td><%= flight.departure %></td>
    <td><%= flight.departure_time %></td>
    <td><%= flight.arrival %></td>
    <td><%= flight.arrival_time %></td>
    <td><%= flight.isinter %></td>
    <td><%= link_to flight.passenger.name, flight.passenger if flight.passenger != nil %></td>
    <td><%= link_to 'Show', flight %></td>
    <td><%= link_to 'Edit', edit_flight_path(flight) %></td>
    <td><%= link_to 'Destroy', flight, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= button_to 'New Flight', new_flight_path, class: 'small nice blue radius button' %>
